#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,a=0,count=0;
    cin>>n;
    char arr[n+1];
    for(int i=0;i<n;i++)
    cin>>arr[i];
    for(int i=0;i<n;i++)
    {
       if(a>0)
       {
         if(arr[i]=='U')
         a+=1;
         else
         a-=1;
       }
      else 
      {
          if(arr[i]=='U')
          a+=1;
          else
          a-=1;
          if(a==0)
          count++;
      }
    }
    cout<<count;
}
