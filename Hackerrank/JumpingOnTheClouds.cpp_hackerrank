#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,count=0;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    cin>>arr[i];
    for(int i=1;i<n;)
    {
        if(arr[i]==0&&arr[i+1]==1)
        {
         count++;
         i++;
        }
        else
        {
            count++;
            i+=2;
        }
    }
    cout<<count;
}
